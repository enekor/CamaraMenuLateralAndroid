<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.gallery.GalleryFragment">
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" tools:src="@tools:sample/avatars" android:id="@+id/imagen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/titulo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagen" android:layout_marginTop="14dp"
            android:hint="titulo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tag1"
            app:layout_constraintTop_toBottomOf="@+id/titulo"
            app:layout_constraintStart_toStartOf="parent" android:hint="tag1" android:layout_marginTop="25dp"
            android:layout_marginStart="12dp"/>
    <Button
            android:text="Sacar foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/capturar"
            app:layout_constraintTop_toBottomOf="@+id/tag3"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tag3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tag2"
            app:layout_constraintStart_toStartOf="parent" android:hint="tag1"
            android:layout_marginStart="12dp" app:layout_constraintTop_toBottomOf="@+id/tag1"
            android:layout_marginTop="12dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tag3"
            app:layout_constraintStart_toStartOf="parent" android:hint="tag1"
            android:layout_marginStart="12dp" app:layout_constraintTop_toBottomOf="@+id/tag2"
            android:layout_marginTop="12dp"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guardar"
            app:layout_constraintTop_toBottomOf="@+id/tag3"
            android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tag3"/>
</androidx.constraintlayout.widget.ConstraintLayout>